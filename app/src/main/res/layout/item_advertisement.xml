<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:movie="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="clickListener"
            type="woowacourse.movie.home.view.listener.MovieHomeClickListener" />

        <variable
            name="advertisement"
            type="woowacourse.movie.model.Advertisement" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/advertisementImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{() -> clickListener.onAdvertisementClick(advertisement)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            movie:imgRes="@{advertisement.banner}"
            tools:src="@drawable/advertisement" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
