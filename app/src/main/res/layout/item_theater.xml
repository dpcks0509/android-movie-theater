<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="theaterViewHolder"
            type="woowacourse.movie.home.view.adapter.theater.TheaterViewHolder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="@{() -> theaterViewHolder.theaterItemClick()}"
        android:padding="8dp">

        <TextView
            android:id="@+id/theaterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="30dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{theaterViewHolder.theaterName}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:hint="선릉 극장" />

        <TextView
            android:id="@+id/screeningTimeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(theaterViewHolder.screeningTimeNumber)}"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/screeningTimeNumberFormat"
            app:layout_constraintLeft_toLeftOf="@id/theaterName"
            app:layout_constraintTop_toBottomOf="@id/theaterName"
            tools:hint="3" />

        <TextView
            android:id="@+id/screeningTimeNumberFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개의 상영 시간"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/screeningTimeNumber"
            app:layout_constraintTop_toBottomOf="@id/theaterName" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
