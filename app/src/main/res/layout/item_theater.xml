<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/theater_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:hint="선릉" />

        <TextView
            android:id="@+id/theater_name_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 극장"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/theater_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/screening_time_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/screening_time_number_format"
            app:layout_constraintLeft_toLeftOf="@id/theater_name"
            app:layout_constraintTop_toBottomOf="@id/theater_name"
            tools:hint="3" />

        <TextView
            android:id="@+id/screening_time_number_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개의 상영 시간"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/screening_time_number"
            app:layout_constraintTop_toBottomOf="@id/theater_name" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>